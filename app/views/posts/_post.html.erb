<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= post.content %>
  </p>

  <% if post.tags.any? %>
    <p>
      <strong>Tags:</strong>
      <%= post.tags.map(&:name).join(', ') %>
    </p>

  <% end %>

  <% if post.categories.any? %>
  <p>
    <strong>Categories:</strong>
    <%= post.categories.map(&:name).join(', ') %>
  </p>

  <% end %>
</div>
